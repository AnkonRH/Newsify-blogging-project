<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partial/head') %>
  <title><%= blog.title %></title>
  <style>
    .blog-wrapper {
      max-width: 850px;
      margin: 60px auto;
      background: #fff;
      padding: 2rem;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .blog-title {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 20px;
    }

    .cover-image {
      width: 100%;
      border-radius: 15px;
      margin: 20px 0;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .blog-body {
      font-size: 1.15rem;
      line-height: 1.8;
      color: #444;
      margin-bottom: 40px;
    }

    .meta {
      font-size: 0.95rem;
      color: #555;
      margin-bottom: 10px;
    }

    .comment-box {
      border: 1px solid #ddd;
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 10px;
      background-color: #f9f9f9;
    }

    .comment-meta {
      font-size: 0.9rem;
      color: #777;
      margin-top: 5px;
    }

    textarea {
      width: 100%;
      padding: 12px;
      border-radius: 10px;
      border: 1px solid #ccc;
      resize: vertical;
      font-size: 1rem;
    }

    textarea:focus {
      outline: none;
      border-color: #007bff;
      box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
    }

    .comment-button {
      margin-top: 10px;
      padding: 10px 24px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: bold;
      cursor: pointer;
    }

    .comment-button:hover {
      background-color: #0056b3;
    }

    a {
      color: #007bff;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <%- include('./partial/nav') %>

  <div class="container blog-wrapper">
    <h1 class="blog-title"><%= blog.title %></h1>

    <% if (blog.coverImageUrl) { %>
      <img src="<%= blog.coverImageUrl %>" alt="Blog Cover Image" class="cover-image">
    <% } %>

    <p class="blog-body"><%= blog.body %></p>

    <hr>

    <% if (blog.createdBy) { %>
      <p class="meta"><strong>Author:</strong> <%= blog.createdBy.fullName %></p>
      <p class="meta"><strong>Email:</strong> <%= blog.createdBy.email %></p>
    <% } %>

    <p class="meta"><small>Posted on: <%= new Date(blog.createdAt).toLocaleString() %></small></p>

    <hr>
    <h4>Comments</h4>

    <% if (comments && comments.length > 0) { %>
      <% comments.forEach(comment => { %>
        <div class="comment-box">
          <p><%= comment.content %></p>
          <p class="comment-meta">
            â€” <%= comment.createdBy?.fullName || 'Anonymous' %> (<%= comment.createdBy?.email || 'No email' %>),
            <%= new Date(comment.createdAt).toLocaleString() %>
          </p>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No comments yet. Be the first to comment!</p>
    <% } %>

    <hr>
    <h4>Leave a Comment</h4>

    <% if (user) { %>
      <form action="/comment/blog/<%= blog._id %>/comment" method="POST" class="mt-3">
        <div class="mb-3">
          <textarea name="content" rows="4" placeholder="Write your comment..." required></textarea>
        </div>
        <button type="submit" class="comment-button">Post Comment</button>
      </form>
    <% } else { %>
      <p class="text-muted">Please <a href="/user/signin">sign in</a> to post a comment.</p>
    <% } %>
  </div>

  <%- include('./partial/script') %>
</body>
</html>
